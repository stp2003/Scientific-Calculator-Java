<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text_view_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="#f6f6f6"
        android:textSize="30sp"
        tools:ignore="RtlCompat">

    </TextView>


    <TextView
        android:id="@+id/text_view_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#000"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="#fff"
        android:textSize="50sp"
        tools:ignore="RtlCompat">

    </TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:elevation="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:orientation="vertical"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/button_all_clear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/ac"
                        android:textColor="@color/operatorColor"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_clear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/c"
                        android:textColor="@color/operatorColor"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_bracket_poen"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/openBracket"
                        android:textColor="@color/operatorColor"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_bracket_closed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/closeBracket"
                        android:textColor="@color/operatorColor"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/button_sin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/Sine"
                        android:textAllCaps="false"
                        android:textColor="@color/operatorColor"
                        android:textSize="27sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_cos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/Cosine"
                        android:textAllCaps="false"
                        android:textColor="@color/operatorColor"
                        android:textSize="24sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_tan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/Tangent"
                        android:textAllCaps="false"
                        android:textColor="@color/operatorColor"
                        android:textSize="26sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_log"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/log"
                        android:textAllCaps="false"
                        android:textColor="@color/operatorColor"
                        android:textSize="26sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_ln"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/ln"
                        android:textAllCaps="false"
                        android:textColor="@color/operatorColor"
                        android:textSize="28sp"

                        tools:ignore="HardcodedText">

                    </Button>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/button_factorial"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/factorial"
                        android:textAllCaps="false"
                        android:textColor="@color/operatorColor"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_square"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/square"
                        android:textAllCaps="false"
                        android:textColor="@color/operatorColor"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_sqrt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/SquareRoot"
                        android:textAllCaps="false"
                        android:textColor="@color/operatorColor"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_inverse"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/inverse"
                        android:textAllCaps="false"
                        android:textColor="@color/operatorColor"
                        android:textSize="24sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_divide"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/division"
                        android:textColor="@color/teal_200"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/button_seven"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/seven"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_eight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/eight"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_nine"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/nine"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_multiply"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/multiply"
                        android:textColor="@color/teal_200"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/button_four"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/four"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_five"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/five"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_six"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/six"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_minus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/minus"
                        android:textColor="@color/teal_200"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/button_one"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/one"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/two"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_three"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/three"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_plus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/plus"
                        android:textColor="@color/teal_200"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/button_pi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/pi"
                        android:textColor="@color/purple_200"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_zero"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/zero"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_dot"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/point"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                    <Button
                        android:id="@+id/button_equal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:text="@string/equalsTo"
                        android:textColor="@color/teal_200"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText">

                    </Button>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
